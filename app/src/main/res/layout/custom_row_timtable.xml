<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="80dp"
                    android:background="@color/about_image"
                    android:id="@+id/t_color"
                    android:layout_column="1"
                    android:layout_margin="8dp"

                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Web Programming"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/t_name"
                        android:layout_column="2"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/t_time"
                        android:layout_below="@+id/t_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:id="@+id/t_day"
                        android:layout_below="@+id/t_time"
                        android:layout_alignLeft="@+id/t_time"
                        android:layout_alignStart="@+id/t_time" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conferance Hall"
                        android:id="@+id/t_venue"
                        android:layout_below="@+id/t_day"
                        android:layout_alignLeft="@+id/t_time"
                        android:layout_alignStart="@+id/t_time" />

                </RelativeLayout>



            </TableRow>
        </TableLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>